<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/scene1"
        app:constraintSetEnd="@id/endScene1"
        app:constraintSetStart="@id/startScene1"
        app:duration="250">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/ivMotionScene1" />
    </Transition>

    <Transition
        android:id="@+id/scene2"
        app:constraintSetEnd="@id/endScene2"
        app:constraintSetStart="@id/startScene2"
        app:duration="250">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@id/ivMotionScene2" />
    </Transition>

    <ConstraintSet android:id="@+id/startScene1" />
    <ConstraintSet android:id="@+id/endScene1">
        <Constraint android:id="@+id/ivMotionScene1">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tvScene1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvScene1" />
            <Transform android:rotation="180" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/startScene2" />
    <ConstraintSet android:id="@+id/endScene2">
        <Constraint
            android:id="@+id/ivMotionScene2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tvScene2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvScene2">
            <Transform android:rotation="180" />
        </Constraint>
    </ConstraintSet>

</MotionScene>